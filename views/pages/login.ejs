
<%- include('layout.ejs'); %>
<section class="form login">
    <form action="/login" method="post">
      <div class="error-text"></div>
      <h3 style="text-align: center; margin-bottom: 20px;">Đăng nhập</h3>
      <div id = "notify" style="color: green;"><%= message %></div>
      <div id = "warning" style="color: red;"><%= warningMessage %></div>   

      <div class="field input">
        <label for="">Email</label>
        <input type="text" name="email" placeholder="Nhập Email" required>
      </div>

      
      <div class="field input">
        <label for="">Mật khẩu</label>
        <input type="password" name="password" placeholder="Nhập mật khẩu" required>
        <i class="fas fa-eye"></i>
      </div>

      <div class="field button">
        <input type="submit" value="Bắt đầu Chat">
      </div>

    </form>
    <div class="link">Chưa có tài khoản? <a href="/register">Đăng ký ngay</a></div>
  </section>
</div>
<script>
  var warning = '<%- warningMessage %>';  
  if (warning != null){
    $.each($(".field"),function(){
      $(this).click(() => { $("#warning").hide();})
    });
  }
</script>
</body>
</html>
